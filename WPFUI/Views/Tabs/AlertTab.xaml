<v:AlertTabBase
    x:Class="WPFUI.Views.Tabs.AlertTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:v="clr-namespace:WPFUI.Views.Tabs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:WPFUI.Views.Tabs"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFE5E5E5">
        <StackPanel>
            <Border Style="{DynamicResource Box}">
                <StackPanel>
                    <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Discord" VerticalAlignment="Center" FontWeight="Bold" />
                    <CheckBox x:Name="DiscordEnable" Content="Discord enable" />
                    <TextBox x:Name="DiscordWebhookUrl" materialDesign:HintAssist.Hint="Discord Webhook Url" Style="{DynamicResource MaterialDesignFloatingHintTextBox}" />

                    <Button x:Name="TestButton" Style="{DynamicResource MaterialDesignFloatingActionMiniDarkButton}" ToolTip="Test" Margin="0,10,0,0" HorizontalAlignment="Left">
                        <materialDesign:PackIcon Width="30" Height="30" Kind="Connection" />
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</v:AlertTabBase>