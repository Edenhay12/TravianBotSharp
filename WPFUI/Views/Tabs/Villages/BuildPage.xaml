<reactiveui:ReactivePage
      x:Class="WPFUI.Views.Tabs.Villages.BuildPage"
      x:TypeArguments="local:BuildViewModel"
      xmlns:local="clr-namespace:WPFUI.ViewModels.Tabs.Villages"
      xmlns:Behaviours="clr-namespace:WPFUI.Behaviours"
      xmlns:reactiveui="http://reactiveui.net"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="clr-namespace:WPFUI.Views.Uc"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BuildPage">

    <Grid  x:Name="MainGrid" Background="#FFE5E5E5" Margin="0,2,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="112*" />
            <ColumnDefinition Width="153*" />
            <ColumnDefinition Width="135*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="LeftGrid" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="15*" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="CurrentlyBuildings" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Text="Currently Buildings" />
            <ListView x:Name="CurrentGrid" Margin="0,2,0,0" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=3}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Buildings" DisplayMemberBinding="{Binding Name}"   Behaviours:GridViewColumnResize.Width="*" />
                        <GridViewColumn Header="Level" DisplayMemberBinding="{Binding Level}"   Behaviours:GridViewColumnResize.Width="*" />
                        <GridViewColumn Header="Complete at" DisplayMemberBinding="{Binding CompleteTime}"   Behaviours:GridViewColumnResize.Width="*" />
                    </GridView>
                </ListView.View>
            </ListView>
            <TextBlock x:Name="Buildins" HorizontalAlignment="Center" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Text="Buildings" />
            <ListView x:Name="BuildingsGrid" Margin="2,2,2,2" Grid.Row="3" d:ItemsSource="{d:SampleData ItemCount=40}"  SelectionMode="Single" IsSynchronizedWithCurrentItem="True">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Foreground" Value="{Binding Color}" />
                        <Setter Property="Background" Value="Black" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Location" DisplayMemberBinding="{Binding Location}"   Behaviours:GridViewColumnResize.Width="*" />
                        <GridViewColumn Header="Buildings" DisplayMemberBinding="{Binding Name}"   Behaviours:GridViewColumnResize.Width="*" />
                        <GridViewColumn Header="Level" DisplayMemberBinding="{Binding Level}"   Behaviours:GridViewColumnResize.Width="*" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Grid x:Name="MidGrid" Grid.Column="1" Margin="2,2,2,2">
            <Grid.RowDefinitions>
                <RowDefinition Height="37*" />
                <RowDefinition Height="54*" />
                <RowDefinition Height="131*" />
            </Grid.RowDefinitions>
            <controls:NormalBuildUc x:Name="NormalBuild" Margin="2,5,2,5" />
            <controls:ResBuildUc Grid.Row="1" x:Name="ResBuild" Margin="2,5,2,5" />
        </Grid>

        <Grid x:Name="RightGrid" Grid.Column="2" Margin="2,2,2,2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="15*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="TopButton" Content="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2,2,1,1" />
            <Button x:Name="BottomButton" Content="Bottom" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Margin="2,1,1,2" />
            <Button x:Name="UpButton" Grid.Column="1" Content="Up" HorizontalAlignment="Stretch" Margin="1,2,1,1" VerticalAlignment="Stretch" />
            <Button x:Name="DownButton" Grid.Column="1" Content="Down" HorizontalAlignment="Stretch" Margin="1,1,1,2" Grid.Row="1" VerticalAlignment="Stretch" />
            <Button x:Name="DeleteButton" Grid.Column="2" Content="Delete" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1,2,1,1" />
            <Button x:Name="DeleteAllButton" Grid.Column="2" Content="Delete all" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch" Margin="1,1,1,2" />
            <Button x:Name="ImportButton" Grid.Column="3" Content="Import" HorizontalAlignment="Stretch" Margin="1,2,2,1" VerticalAlignment="Stretch" />
            <Button x:Name="ExportButton" Grid.Column="3" Content="Export" HorizontalAlignment="Stretch" Margin="1,1,2,2" Grid.Row="1" VerticalAlignment="Stretch" />
            <ListView x:Name="QueueGrid" Grid.ColumnSpan="4" Grid.Row="3" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionMode="Single" IsSynchronizedWithCurrentItem="True">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Queue" DisplayMemberBinding="{Binding Content}"   Behaviours:GridViewColumnResize.Width="*" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</reactiveui:ReactivePage>